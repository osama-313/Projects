<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
  
  <!-- this should always be the root tag -->
  <hibernate-configuration>
  <!-- inside id the tag, we can find configuration properties for hibernate such as our database URL ... -->
  <session-factory>
  <!-- this property speciifies our Driver class -->
  <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
  <!-- spcifying the dilact of SQL that we're using -->
  <property name="hibernate.dialect">org.hibernate.dialect.PostgresSQLDialect</property>
  <!-- database credentials -->
  <property name="hibernate.connection.url"></property>
  <property name="hibernate.connection.username"></property>
  <property name="hibernate.connection.passsword"></property>
  <!-- this properte allows us to see the SQL queries generated by hibernat -->
  <property name="show_sql">true</property>
  <!-- how many connection a single user is allowed -->
  <property name="hibernate.connection.pool_size">5</property>
  
  <property name="hibernate.current_session_context_class">thread</property>
  <property name="hibernate.hbm2ddl.auto">create</property>
  </session-factory>
  
  </hibernate-configuration>